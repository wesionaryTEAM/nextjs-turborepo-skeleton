{
  "name": "turborepo-example",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "app:consumer": "turbo run dev --filter=consumer",
    "app:owner": "turbo run dev --filter=owner",
    "lint": "turbo run lint",
    "lint-staged": "lint-staged",
    "lint:consumer": "turbo run lint --filter=consumer",
    "lint:owner": "turbo run lint --filter=owner",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "cypress:open": "turbo run cypress:open",
    "cypress:run": "turbo run cypress:run",
    "e2e:open": "turbo run e2e:open",
    "cypress:consumer": "turbo run cypress:open --filter=consumer",
    "cypress:owner": "turbo run cypress:open --filter=owner",
    "e2e:consumer": "turbo run e2e:open --filter=consumer",
    "e2e:owner": "turbo run e2e:open --filter=owner"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "devDependencies": {
    "eslint-config-custom": "latest",
    "pre-commit": "^1.2.2",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "dependencies": {
    "lint-staged": "^13.0.3"
  },
  "packageManager": "yarn@1.22.18"
}
